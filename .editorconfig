root = true

[*]
charset = utf-8
tab_width = 4
indent_style = tab
end_of_line = lf
max_line_length = 96
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,d.ts,js,txt}]
indent_size = 4
indent_style = space

[*.{html,md,txt,svg}]
max_line_length = off

[*.{json,md,txt,yml}]
trim_trailing_whitespace = false